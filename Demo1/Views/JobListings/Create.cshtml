@model Demo1.Models.JobListing

@{
    ViewData["Title"] = "Create Job";
}

<h1>Create</h1>

<h4>JobListing</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="invalid-feedback">Please enter a name.</div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description:</label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="invalid-feedback">Please enter a description.</div>
            </div>
            <div class="form-group">
                <label asp-for="RequiredQualifications" class="control-label">Required Qualifications:</label>
                <input asp-for="RequiredQualifications" class="form-control" required />
                <span asp-validation-for="RequiredQualifications" class="text-danger"></span>
                <div class="invalid-feedback">Please enter required qualifications.</div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationDeadline" class="control-label">Application Deadline:</label>
                <input asp-for="ApplicationDeadline" class="form-control" required />
                <span asp-validation-for="ApplicationDeadline" class="text-danger"></span>
                <div class="invalid-feedback">Please enter an application deadline.</div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label">Application User ID:</label>
                <input asp-for="ApplicationUserId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
